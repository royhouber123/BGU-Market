# BGU Market Configuration Example
# Copy this file to config.properties and modify the values as needed
# This is an alternative approach to using application.properties for configuration

# Admin User Configuration
# When the system boots, an admin user will be automatically created/updated with these credentials
admin.username=admin
admin.password=admin

# Database Configuration (optional overrides)
db.url=jdbc:h2:mem:bgumarket
db.username=sa
db.password=

# JWT Configuration (optional overrides)
jwt.secret=bguMarketSecretKey
jwt.expiration=86400000

# Server Configuration (optional overrides)  
server.port=8080 